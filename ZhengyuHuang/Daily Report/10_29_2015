$("ul").on('click', 'li', function() {
	var index = $(this).index();
	console.log($(this));
	//console.log(index);
	$(''li':lt(' + (index + 1) + ')').addClass('yellow');
	$(''li':gt(' + index + ')').removeClass('yellow');
})

